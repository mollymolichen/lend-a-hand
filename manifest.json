{
  "name": "Mental Health Extension",   // random name for now
  "manifest_version": 2,
  "version" : "1.0",
  "description": "Redirects Facebook users that post triggering content or content depicting self-harm to help."
  /*"icons:" {
    "128:" "icon_128.png"
  }*/,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "http://*.google.com/", 
    "https://*.google.com/",
    "http://*.facebook.com/",
    "https://*.facebook.com/",
    "activeTab",
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_title": "Mental Health Extension",
    "default_icon": "icon.png",
    "default_popup": "background.js"
  },
  "content_scripts": [
    {
      "css": [],
      "js": ["contentScript.js", "eventPage.js"],
      "matches": [
        "http://facebook.com/*",
        "https://facebook.com/*"
      ]
    }]
}